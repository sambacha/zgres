{
    "compilerOptions": {
        "target": "es2019",
        "module": "commonjs",
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "types": [],
        "skipLibCheck": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "jsx": "react",
        "declaration": true,
        "declarationMap": true,
        "declarationDir": "lib",
        "outDir": "lib",
    },
    "include": [
        "src/**/*.ts"
        // "samples/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts",
        "src/**/spec-utils.ts",
    ]
}